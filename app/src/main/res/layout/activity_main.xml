<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/btn_blue_normal"
              android:orientation="vertical">

    <com.wangsheng.fastdevlibrary.widget.titlebar.TopTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@drawable/mt_refreshing05">
    </com.wangsheng.fastdevlibrary.widget.titlebar.TopTitleBar>

    <com.wangsheng.fastdevlibrary.widget.CountDownTimerButton
        android:id="@+id/btn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="获取验证码"/>
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.wangsheng.fastdevapp.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

        <com.wangsheng.fastdevlibrary.widget.gesturelibrary.view.CustomLockBmpView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:bmp_error_ring="@drawable/selected_error"
            app:bmp_line_width="10dp"
            app:bmp_on_ring="@drawable/selected"
            app:bmp_show_arrow="false"
            app:bmp_up_ring="@drawable/unselected"
            app:color_error_line="@color/colorPrimary"
            app:color_on_line="@color/colorPrimary"
            app:outer_ring_spacing_width="50dp"/>

        <com.wangsheng.fastdevlibrary.widget.spannabletextview.SpannableTextView
            android:id="@+id/stv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <com.wangsheng.fastdevlibrary.widget.spannabletextview.SpannableTextView
            android:id="@+id/stv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <com.wangsheng.fastdevlibrary.widget.spannabletextview.SpannableTextView
            android:id="@+id/stv_2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <com.wangsheng.fastdevlibrary.widget.spannabletextview.SpannableTextView
            android:id="@+id/stv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <com.wangsheng.fastdevlibrary.widget.spannabletextview.SpannableTextView
            android:id="@+id/stv_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
