<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--下拉刷新上拉加载-->
    <declare-styleable name="SpringView">
        <attr name="type">
            <enum name="overlap" value="0"/>
            <enum name="follow" value="1"/>
        </attr>
        <attr name="give">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="none" value="3"/>
        </attr>
        <attr name="header" format="reference"/>
        <attr name="footer" format="reference"/>
    </declare-styleable>

    <!--密码输入框-->
    <declare-styleable name="PwdEditText">
        <!-- 外部边缘线宽度 -->
        <attr name="outLineWidth" format="dimension"/>
        <!-- 外边缘圆弧半径 -->
        <attr name="outRadius" format="dimension"/>
        <!-- 外部边缘线条颜色 -->
        <attr name="outLineColor" format="color"/>
        <!-- 间隔线宽度 -->
        <attr name="dividerLineWidth" format="dimension"/>
        <!-- 间隔线颜色 -->
        <attr name="dividerLineColor" format="color"/>
        <!-- 圆点半径 -->
        <attr name="dotRadius" format="dimension"/>
        <!-- 圆点颜色 -->
        <attr name="dotColor" format="color"/>
        <!-- 输入框宽度 -->
        <attr name="inputBoxWidth" format="dimension"/>
        <!-- 密码长度(默认为6) -->
        <attr name="pwdLength" format="integer"/>
    </declare-styleable>

    <!--自定义圆角button-->
    <declare-styleable name="RoundButton">
        <!-- 背景色 -->
        <attr name="btnSolidColor" format="color"/>
        <!-- 边框色 -->
        <attr name="btnStrokeColor" format="color"/>
        <!-- 边框厚度 -->
        <attr name="btnStrokeWidth" format="dimension"/>
        <!-- 边框虚线长度 -->
        <attr name="btnStrokeDashWidth" format="dimension"/>
        <!-- 边框虚线间隙 -->
        <attr name="btnStrokeDashGap" format="dimension"/>
        <!-- 圆角半径，stadium 表示半径为 min(height,width) / 2-->
        <attr name="btnCornerRadius" format="dimension">
            <enum name="stadium" value="-1"/>
        </attr>
        <!-- 自动计算按下(pressed)状态颜色的系数, 值为0时不自动计算 -->
        <attr name="btnPressedRatio" format="float"/>
    </declare-styleable>

    <!--自定义RatingBar-->
    <declare-styleable name="RatingView">
        <attr name="drawable_margin" format="dimension" />
        <attr name="drawable_size" format="dimension"/>
        <attr name="max_count" format="integer" />
        <attr name="rating" format="float" />
        <attr name="is_indicator" format="boolean" />
        <attr name="drawable_empty" format="reference" />
        <attr name="drawable_filled" format="reference" />
        <attr name="drawable_half" format="reference" />
    </declare-styleable>

    <!--SuperTextView-->
    <declare-styleable name="SuperTextView">
        <attr name="sLeftIconRes" format="reference"/>
        <attr name="sRightIconRes" format="reference"/>
        <attr name="sRightCheckBoxRes" format="reference"/>

        <attr name="sLeftTextString" format="string"/>
        <attr name="sCenterTextString" format="string"/>
        <attr name="sRightTextString" format="string"/>

        <attr name="sLeftTopTextString" format="string"/>
        <attr name="sLeftBottomTextString" format="string"/>
        <attr name="sLeftBottomTextString2" format="string"/>


        <attr name="sTopLineMargin" format="dimension"/>
        <attr name="sBottomLineMargin" format="dimension"/>
        <attr name="sBothLineMargin" format="dimension"/>

        <attr name="sLeftIconMarginLeft" format="dimension"/>
        <attr name="sLeftTextMarginLeft" format="dimension"/>

        <attr name="sLeftTopTextMarginLeft" format="dimension"/>
        <attr name="sLeftBottomTextMarginLeft" format="dimension"/>
        <attr name="sLeftBottomTextMarginLeft2" format="dimension"/>

        <attr name="sRightIconMarginRight" format="dimension"/>
        <attr name="sRightTextMarginRight" format="dimension"/>
        <attr name="sRightCheckBoxMarginRight" format="dimension"/>
        <attr name="sRightCheckBoxShow" format="boolean"/>
        <attr name="sIsChecked" format="boolean"/>
        <attr name="sUseRipple" format="boolean"/>

        <attr name="sLeftTextSize" format="dimension"/>
        <attr name="sLeftTopTextSize" format="dimension"/>
        <attr name="sLeftBottomTextSize" format="dimension"/>
        <attr name="sLeftBottomTextSize2" format="dimension"/>
        <attr name="sRightTextSize" format="dimension"/>
        <attr name="sCenterTextSize" format="dimension"/>

        <attr name="sBackgroundColor" format="color"/>
        <attr name="sLeftTextColor" format="color"/>
        <attr name="sLeftTopTextColor" format="color"/>
        <attr name="sLeftBottomTextColor" format="color"/>
        <attr name="sLeftBottomTextColor2" format="color"/>
        <attr name="sRightTextColor" format="color"/>
        <attr name="sCenterTextColor" format="color"/>

        <attr name="sIsSingLines" format="boolean"/>
        <attr name="sMaxLines" format="integer"/>
        <attr name="sMaxEms" format="integer"/>

        <attr name="sLineShow" format="enum">
            <enum name="none" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
            <enum name="both" value="3"/>
        </attr>

    </declare-styleable>

    <!--手势锁GestureLock-->
    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger" format="color"/>
        <attr name="color_finger_on" format="color"/>
        <attr name="color_finger_up_correct" format="color"/>
        <attr name="color_finger_up_error" format="color"/>
        <attr name="count" format="integer" />
        <attr name="preference_id" format="integer"/>
    </declare-styleable>

    <!--手势控件1 通过画笔设定的样式-->
    <declare-styleable name="GestureLock_styleable">
        <!--普通状态下圈的颜色-->
        <attr name="color_up_ring" format="color"/>
        <!--按下状态下圈的颜色-->
        <attr name="color_on_ring" format="color"/>
        <!--错误时的颜色-->
        <attr name="color_error_ring" format="color"/>
        <!--外圈与外圈之间的间距-->
        <attr name="outer_ring_spacing_width" format="dimension"/>
        <!--内圆大小-->
        <attr name="inner_ring_width" format="dimension"/>
        <!--内圆背景大小-->
        <attr name="inner_background_width" format="dimension"/>
        <!--连线的宽度-->
        <attr name="line_width" format="dimension"/>
        <!--是否显示箭头-->
        <attr name="show_arrow" format="boolean"/>
    </declare-styleable>
    <!--手势控件2 通过设置图片设定的样式-->
    <declare-styleable name="GestureLock_bmp_styleable">
        <!--普通状态下圈的图片-->
        <attr name="bmp_up_ring" format="reference"/>
        <!--按下状态下圈的图片-->
        <attr name="bmp_on_ring" format="reference"/>
        <!--错误时的图片-->
        <attr name="bmp_error_ring" format="reference"/>
        <!--指示箭头图片-->
        <attr name="bmp_arrow_ring" format="reference"/>
        <!--外圈与外圈之间的间距-->
        <attr name="outer_spacing_width" format="dimension"/>
        <!--连接错误颜色-->
        <attr name="color_error_line" format="color"/>
        <!--连线颜色-->
        <attr name="color_on_line" format="color"/>
        <!--连线的宽度-->
        <attr name="bmp_line_width" format="dimension"/>
        <!--是否显示方向箭头-->
        <attr name="bmp_show_arrow" format="boolean"/>
    </declare-styleable>

    <!--分段指示器-->
    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="selectedBackgroundColors" format="color|reference" />
        <attr name="selectedTextColors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
        <attr name="selectedIndex" format="integer" />
    </declare-styleable>

    <!--viewPager分页指示器-->
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color"/>
        <attr name="pstsUnderlineColor" format="color"/>
        <attr name="pstsDividerColor" format="color"/>
        <attr name="pstsIndicatorHeight" format="dimension"/>
        <attr name="pstsUnderlineHeight" format="dimension"/>
        <attr name="pstsDividerPadding" format="dimension"/>
        <attr name="pstsTabPaddingLeftRight" format="dimension"/>
        <attr name="pstsScrollOffset" format="dimension"/>
        <attr name="pstsTabBackground" format="reference"/>
        <attr name="pstsShouldExpand" format="boolean"/>
        <attr name="pstsTextAllCaps" format="boolean"/>
        <attr name="tabTextSize" format="dimension"/>
        <attr name="tabTextColor" format="color"/>
        <attr name="selectedTabTextColor" format="color"/>
    </declare-styleable>

    <!--请求状态页面 加载中、错误、重试、空页面-->
    <declare-styleable name="LoadingLayout">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="retryView" format="reference" />
        <attr name="emptyView" format="reference" />
    </declare-styleable>
    
    <!--常用的表单验证-->
    <declare-styleable name="FormEditText">
        <attr name="verify_texts" format="string|reference"/>
        <attr name="error_focus" format="boolean|reference"/>
        <attr name="error_msg" format="string|reference"/>
    </declare-styleable>

    <!--不同样式的button便于xml中设置-->
    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" format="color|reference"/>
        <attr name="pressedTextColor" format="color|reference"/>
        <attr name="unableTextColor" format="color|reference"/>
        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference"/>
        <attr name="strokeDashGap" format="dimension|reference"/>
        <attr name="normalStrokeWidth" format="dimension|reference"/>
        <attr name="pressedStrokeWidth" format="dimension|reference"/>
        <attr name="unableStrokeWidth" format="dimension|reference"/>
        <attr name="normalStrokeColor" format="color|reference"/>
        <attr name="pressedStrokeColor" format="color|reference"/>
        <attr name="unableStrokeColor" format="color|reference"/>
        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference"/>
        <attr name="pressedBackgroundColor" format="color|reference"/>
        <attr name="unableBackgroundColor" format="color|reference"/>
        <!--background radius-->
        <attr name="radius" format="dimension|reference"/>
        <attr name="round" format="boolean|reference"/>
        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference"/>
    </declare-styleable>

    <!--基础webView设置-->
    <declare-styleable name="BaseWebView">
        <!--是否显示头部进度条-->
        <attr name="isShowProgress" format="boolean|reference"/>
        <!--进度条的样式-->
        <attr name="progress_drawable" format="reference"/>
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme">
        <!-- Customize your theme here. -->
    </style>

    <!--头部统一的样式-->
    <declare-styleable name="TopTitleBar">
        <!-- 定义titlebar中间标题-->
        <attr name="tb_title" format="reference" />
        <!-- 定义titlebar返回按钮图片-->
        <attr name="tb_back_icon" format="reference" />
        <!-- 定义titlebar背景图片-->
        <attr name="tb_background_pic" format="reference" />
        <!-- 定义titlebar分割线是否可见-->
        <attr name="tb_divider_visible" format="boolean" />
    </declare-styleable>

    <!--底部切换-->
    <declare-styleable name="TabStripView">
        <attr name="navigateTabTextColor" format="color|reference"/>
        <attr name="navigateTabSelectedTextColor" format="color|reference"/>
        <attr name="containerId" format="integer|reference"/>
        <attr name="navigateTabTextSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="ColorFountTextView">
        <attr name="text_arrays" format="string"/>
        <attr name="color_arrays" format="string"/>
        <attr name="textsize_arrays" format="string"/>
        <attr name="line_arrays" format="string"/>
        <attr name="style_arrays" format="string"/>
    </declare-styleable>

    <declare-styleable name="DropDownMenu">
        <attr name="ddtextSelectedColor" format="color"/>
        <attr name="ddtextUnselectedColor" format="color"/>
        <attr name="ddmenuBackgroundColor" format="color"/>
        <attr name="ddmaskColor" format="color"/>
        <attr name="ddneedSetSlectedColor" format="boolean"/>
        <attr name="ddmenuTextSize" format="dimension"/>
        <attr name="ddmenuMaxHeight" format="dimension"/>
        <attr name="ddmenuSelectedIcon" format="reference"/>
        <attr name="ddmenuUnselectedIcon" format="reference"/>
    </declare-styleable>
</resources>
